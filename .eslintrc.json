{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "camelcase": ["error", {
            "ignoreImports": true,
            "ignoreGlobals": true
        }],
        "indent": ["error"],
        "max-len": ["error"],
        "no-multi-spaces": ["error"],
        "no-multiple-empty-lines": ["error"],
        "quotes": ["error", "single", {
            "allowTemplateLiterals": true
        }],
        "semi": ["error"]
    }
}
